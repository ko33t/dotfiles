" 括弧対応
set showmatch
" 行番号
set number
" 不可視文字
"set list
"set listchars=tab:>.,trail:_,extends:>,precedes:<
" 印字不可能文字
set display=uhex

" カーソル行をハイライト
set cursorline

" 全角スペース
augroup highlightIdegraphicSpace
		autocmd!
		autocmd ColorScheme * highlight IdeographicSpace term=underline ctermbg=DarkRed guibg=DarkRed
		autocmd VimEnter,WinEnter * match IdeographicSpace /　/
augroup END

" フォント
set guifont=Ricty_for_Powerline:h10
" 日本語とかのフォント
set guifontwide=Ricty:h10

" PowerLineのフォントパッチ
let g:Powerline_symbols = "compatible"
" ステータスラインを常に表示
set laststatus=2


if has('gui_macvim')
	set showtabline=2
	set transparency=2
	set antialias

	set guifontwide=Ricty:h14
	set guifont=Ricty_for_Powerline:h14 
endif


" vimgrepコマンドの検索結果
augroup grepopen
		autocmd!
		autocmd QuickfixCmdPost vimgrep cw
augroup END

colorscheme wombat256mod

" カラー設定
if &term =~ "xterm-256color" || "screen-256color"
  " 256色
  set t_Co=256
  set t_Sf=[3%dm
  set t_Sb=[4%dm
endif



" Highlight ON
syntax enable

" Powerline
set rtp+=~/.anyenv/envs/pyenv/versions/3.5.1/lib/python3.5/site-packages/powerline/bindings/vim
" python from powerline.vim import setup as powerline_setup
" python powerline_setup()
" python del powerline_setup

" set laststatus=2 " Always display the statusline in all windows
" set showtabline=2 " Always display the tabline, even if there is only one tab
set noshowmode " Hide the default mode text (e.g. -- INSERT -- below the statusline)
